{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a solid red border to all webpages matching mozilla.org.",

  "applications": {
    "gecko": {
      "id": "borderify@mozilla.org",
      "strict_min_version": "45.0.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://news.ycombinator.com/item*"],
      "js": ["borderify.js"]
    }
  ]
}
