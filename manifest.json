{
  "manifest_version": 2,
  "name": "Hacker News Comment Collapse",
  "version": "1.0",

  "description": "Adds a collapse/expand button to comments on Hacker News.",

  "applications": {
    "gecko": {
      "id": "hackernews-comment-collapse",
      "strict_min_version": "45.0.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://news.ycombinator.com/item*"],
      "js": ["collapse.js"]
    }
  ]
}
